            { title: "8. Volunteer Application", url: "https://forms.gle/EmPAQAwzXDQ5gUTx6" },
        ];

        /**
         * Navigates the user to the selected Google Form URL.
         */
        function navigateToSelectedForm() {
            const selector = document.getElementById('form-selector');
            const selectedUrl = selector.value;

            // Only navigate if a valid URL has been selected
            if (selectedUrl) {
                // Open the selected form in a new tab/window
                window.open(selectedUrl, '_blank');
            }
        }
    </script>
