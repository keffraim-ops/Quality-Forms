    <script>
        /**
         * The list of forms with their descriptive titles and URLs.
         * Note: The list is hardcoded into the <option> elements above as well.
         * This list is just for easy reference/modification if needed later.
         */
        const forms = [
            { title: "1. Project Feedback Form", url: "https://forms.gle/L7we2aDbpjmxUJLo7" },
            { title: "2. Registration Survey", url: "https://forms.gle/hqFkdUCbRWS9Cf528" },
            { title: "3. Event Sign-up Sheet", url: "https://forms.gle/m7TgkYcddmDUwMoEA" },
            { title: "4. Satisfaction Questionnaire", url: "https://forms.gle/YvKx8Ej7BB82gmKn7" },
            { title: "5. Detailed Evaluation Form", url: "https://docs.google.com/forms/d/e/1FAIpQLSeZfN_Ty_5gT_ynBs8E6J13kvQpRsv72FqMCZCg1B-AdWSdZw/viewform?usp=header" },
            { title: "6. Service Request Form", url: "https://forms.gle/UHZvSevyMsnWTG8AA" },
